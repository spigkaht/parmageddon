<div data-controller="dropdown" class="relative flex justify-between w-full shadow-[0_5px_5px_rgba(0,0,0,0.1)] py-1 z-50">
  <div class="flex justify-between items-center w-full mx-2">
    <div class="flex">
      <%= image_tag "parma.png", size: "40x40", class: "mr-2" %>
      <h2 class="text-base font-semibold text-saffron-mango-900">PARMAGEDDON</h2>
    </div>
    <%= button_tag type: "button", class: "relative w-[40px] h-[40px] z-50 flex items-center justify-center", data: { action: "click->dropdown#toggleMenu" } do %>
      <%= image_tag "menu-icon.svg", size: "40x40", data: { "dropdown_target": "lines" }, class: "absolute transition-opacity transform duration-300 ease-in-out opacity-100" %>
      <%= image_tag "menu-close.svg", size: "38x38", data: { "dropdown_target": "cross" }, class: "absolute transition-opacity transform duration-300 ease-in-out opacity-0" %>
    <% end %>
  </div>
  <div data-dropdown-target="menu" class="hidden flex-col items-center absolute top-10 left-0 right-0 transition ease-in-out duration-500 bg-saffron-mango-20 border-y-2 border-saffron-mango-700 font-semibold text-xl text-saffron-mango-950 py-2">
    <%= link_to root_path, class: "w-full" do %>
      <div class="transition ease-in-out duration-300 hover:bg-saffron-mango-500 h-full text-center hover:text-saffron-mango-200 py-2">
        <p>Home</p>
      </div>
    <% end %>
    <%= link_to venues_path, class: "w-full" do %>
      <div class="transition ease-in-out duration-300 hover:bg-saffron-mango-500 h-full text-center hover:text-saffron-mango-200 py-2">
        <p>Venues</p>
      </div>
    <% end %>
    <%= link_to contact_path, class: "w-full" do %>
      <div class="transition ease-in-out duration-300 hover:bg-saffron-mango-500 h-full text-center hover:text-saffron-mango-200 py-2">
        <p>Contact</p>
      </div>
    <% end %>
  </div>
</div>

<div class="flex flex-col h-full justify-between">
  <div class="flex flex-col md:flex-row justify-between md:justify-center items-center mt-4">
    <%= image_tag asset_url("PARMAGEDDON.png"), class: "w-2/3 max-w-xs sm:max-w-xs mx-3" %>
    <h2 class="text-base lg:text-lg md:pt-20 mx-3">Find a Parma that's right for you.</h2>
  </div>
  <div class="w-full h-1/3 flex flex-col items-end relative" data-controller="google-maps" data-google-maps-page-value="index">
    <%= button_tag "Search here", class: "transition ease-in-out duration-300 bg-transparent hover:bg-saffron-mango-600 text-saffron-mango-700 text-sm font-semibold hover:text-white py-1 px-2 mr-2 border border-saffron-mango-600 hover:border-transparent rounded", data: { action: "click->google-maps#centerMap" } %>
    <div class="loader" data-google-maps-target="loaderDiv"></div>
    <div id="map" class="flex justify-center items-center w-full h-full opacity-50 mt-2" data-google-maps-target="mapDiv"></div>
  </div>
  <div class="flex flex-col justify-between items-center py-6 mb-10" data-controller="toggle-index-search">
    <h2 class="font-bold my-1">Submit a rating!</h2>
    <%= button_tag "Search for a venue", type: "button", class: "transition ease-in-out duration-300 bg-transparent hover:bg-saffron-mango-600 text-saffron-mango-700 text-sm font-semibold hover:text-white py-1 px-2 border border-saffron-mango-600 hover:border-transparent rounded", data: { action: "click->toggle-index-search#toggleVenueSearch", toggle_index_search_target: "venueButton" } %>
    <%= form_with url: venues_path, method: :get do |form| %>
      <div class="hidden justify-center items-center" data-toggle-index-search-target="venueInput">
        <%= form.text_field :venue, placeholder: "Enter venue name", class: "block w-60 px-2 py-1 text-sm text-center bg-saffron-mango-50 border-saffron-mango-300 focus:outline-none focus:ring-saffron-mango-600 focus:border-saffron-mango-800 rounded-md" %>
        <%= form.submit "GO", class: "transition ease-in-out duration-300 text-white bg-saffron-mango-600 hover:bg-saffron-mango-800 focus:ring-4 focus:ring-saffron-mango-300 font-medium rounded-lg text-xs px-4 py-2 ml-2 focus:outline-none" %>
      </div>
    <% end %>
    <h2 class="font-bold my-1">OR..</h2>
    <%= button_tag "Venues by location", type: "button", class: "transition ease-in-out duration-300 bg-transparent hover:bg-saffron-mango-600 text-saffron-mango-700 text-sm font-semibold hover:text-white py-1 px-2 border border-saffron-mango-600 hover:border-transparent rounded", data: { action: "click->toggle-index-search#toggleLocationSearch", toggle_index_search_target: "locationButton" } %>
    <%= form_with url: venues_path, method: :get do |form| %>
      <div class="hidden justify-center items-center" data-toggle-index-search-target="locationInput">
        <%= form.text_field :location, placeholder: "Enter location (suburb etc)", class: "block w-60 px-2 py-1 text-sm text-center bg-saffron-mango-50 border-saffron-mango-300 focus:outline-none focus:ring-saffron-mango-600 focus:border-saffron-mango-800 rounded-md" %>
        <%= form.submit "GO", class: "transition ease-in-out duration-300 text-white bg-saffron-mango-600 hover:bg-saffron-mango-800 focus:ring-4 focus:ring-saffron-mango-300 font-medium rounded-lg text-xs px-4 py-2 ml-2 focus:outline-none" %>
      </div>
    <% end %>
  </div>
</div>
